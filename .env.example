# === Core Django Settings ===
DJANGO_SECRET_KEY=your-super-secret-key-here-at-least-50-characters-long
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=jobraker.settings.development

# === Database Configuration ===
# Development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# Production (PostgreSQL with pgvector)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# === Redis Configuration ===
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# === OpenAI API Configuration ===
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# === Adzuna API Configuration ===
ADZUNA_APP_ID=your-adzuna-app-id
ADZUNA_API_KEY=your-adzuna-api-key

# === Skyvern API Configuration ===
SKYVERN_API_KEY=your-skyvern-api-key

# === Email Configuration ===
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@jobraker.com

# === Site Configuration ===
SITE_URL=http://localhost:8000
SITE_NAME=Jobraker

# === Security Settings ===
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# === Vector Database (Optional - if using Pinecone instead of pgvector) ===
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment
# PINECONE_INDEX_NAME=jobraker-index
# PINECONE_NAMESPACE=jobraker-namespace
# PINECONE_INDEX_DIMENSION=1536
# PINECONE_INDEX_METRIC=cosine

# === Monitoring & Logging ===
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# === File Upload Settings ===
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# === Cache Settings ===
CACHE_TTL=3600  # 1 hour in seconds

# === Rate Limiting ===
API_RATE_LIMIT=1000/hour

# === Background Task Settings ===
CELERY_TASK_ALWAYS_EAGER=False  # Set to True for synchronous testing
CELERY_TASK_EAGER_PROPAGATES=True

# === Development/Testing Flags ===
USE_MOCK_SERVICES=False  # Set to True to use mock responses instead of real APIs
ENABLE_DEBUG_TOOLBAR=True  # Django Debug Toolbar
ENABLE_SILK_PROFILING=False  # SQL profiling

# === Production Settings (when deploying) ===
# DJANGO_DEBUG=False
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# === Job Processing Settings ===
ADZUNA_SYNC_INTERVAL_HOURS=1
MAX_JOBS_PER_SYNC=1000
JOB_RECOMMENDATION_BATCH_SIZE=50
EMAIL_NOTIFICATION_DELAY_SECONDS=30

# === AI Processing Settings ===
EMBEDDING_BATCH_SIZE=100
MAX_TOKENS_PER_REQUEST=1000
AI_REQUEST_TIMEOUT_SECONDS=30
RAG_TOP_N_DOCUMENTS=5
